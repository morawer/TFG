<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <Button
        android:id="@+id/botonExpediente"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginBottom="344dp"
        android:background="@drawable/boton_redondo"
        android:text="Expedientes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.993" />

    <Button
        android:id="@+id/botonEnvio"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/boton_redondo"
        android:text="Envio de multa"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonExpediente" />

    <ImageView
        android:id="@+id/logodvuelta"
        android:layout_width="250dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/dvuelta"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="26dp" />

    <ImageView
        android:id="@+id/gradienteFirma"
        android:layout_width="411dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/background_dvuelta"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/firma"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:text="@string/firma_DVuelta"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoReacciona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/gradienteFirma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logoreacciona"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>