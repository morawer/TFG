<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnvioExpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dvuelta"/>

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/imagenCamara"
        android:layout_width="222dp"
        android:layout_height="336dp"
        app:layout_constraintBottom_toTopOf="@+id/botonCamara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar" />

    <Button
        android:id="@+id/botonCamara"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/boton_redondo"
        android:text="Camara de fotos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintVertical_bias="0.621" />

    <Button
        android:id="@+id/botonGaleria"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/boton_redondo"
        android:text="Galeria de imagenes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintVertical_bias="0.715" />

    <ImageView
        android:id="@+id/gradienteFirma"
        android:layout_width="411dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/background_dvuelta"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/firma"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:text="@string/firma_DVuelta"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoReacciona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/gradienteFirma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logoreacciona"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>